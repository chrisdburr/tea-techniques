# Frontend Environment Configuration Example
# Copy this file to .env.local and update values as needed

# API Configuration
# Default API URL for backend connection
NEXT_PUBLIC_API_URL=http://localhost:8000

# Data Source Configuration
# Options: "api" (default), "static", "mock"
# - api: Use live Django REST API
# - static: Use pre-generated JSON files from /api directory
# - mock: Use static files but with mock delay simulation
NEXT_PUBLIC_DATA_SOURCE=api

# Static Data Configuration
# Path to static JSON files (relative to public directory)
# Used when NEXT_PUBLIC_DATA_SOURCE is "static" or "mock"
NEXT_PUBLIC_STATIC_DATA_PATH=/api

# Feature Flags
# Enable/disable features based on deployment mode
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_ENABLE_EDITING=true
NEXT_PUBLIC_ENABLE_SUBMISSION=true

# Development Settings
# Show data source indicator in UI
NEXT_PUBLIC_SHOW_DATA_SOURCE_INDICATOR=true

# Analytics (optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
