{
  "name": "tea-techniques",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "NODE_ENV=production next build",
    "build:analyze": "ANALYZE=true NODE_ENV=production next build",
    "analyze": "pnpm build:analyze",
    "bundle-analyzer": "pnpm dlx webpack-bundle-analyzer .next/static/chunks/*.js",
    "check-deps": "pnpm dlx bundle-phobia-cli",
    "lighthouse": "lhci autorun",
    "perf-test": "pnpm build && pnpm lighthouse",
    "playwright:test": "playwright test",
    "playwright:ui": "playwright test --ui",
    "playwright:report": "playwright show-report",
    "playwright:install": "playwright install",
    "perf-vitals": "pnpm build && pnpm playwright:test tests/performance/web-vitals.spec.ts",
    "start": "next start",
    "serve": "pnpm build && npx serve@latest out",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "type-check": "tsc --noEmit",
    "generate-data": "node scripts/generate-static-data.js",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "validate": "node scripts/validate-data.js",
    "validate:verbose": "node scripts/validate-data.js --verbose",
    "validate:routes": "tsx scripts/validate-tag-routes.ts",
    "generate-schemas": "node scripts/generate-schemas.js",
    "prebuild": "pnpm run generate-data && pnpm run validate && pnpm run generate-sitemap",
    "prepare": "husky"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.4.4",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.468.0",
    "next": "15.4.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.4.4",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.4.20",
    "bundle-phobia-cli": "^0.14.14",
    "chalk": "^5.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "postcss": "^8.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "remark-cli": "^12.0.1",
    "remark-preset-prettier": "^2.0.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "ultracite": "5.0.48",
    "web-vitals": "^5.0.3",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "pnpm lint",
      "pnpm format"
    ],
    "**/*.{ts,tsx}": [
      "bash -c 'pnpm type-check'"
    ],
    "public/data/**/*.json": [
      "bash -c 'pnpm validate'"
    ]
  }
}
