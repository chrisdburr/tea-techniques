# Tailscale deployment environment variables example
# Copy this file to .env.tailscale and update values

# Domain provided by Tailscale
TAILSCALE_DOMAIN=your-domain.ts.net

# Nginx configuration
NGINX_SERVER_NAME=localhost

# Next.js frontend configuration
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_SWAGGER_URL=/swagger/

# Django backend configuration
SECRET_KEY=change-this-in-production
DEBUG=False
ALLOWED_HOSTS=*,localhost,127.0.0.1,${TAILSCALE_DOMAIN},backend
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000,https://${TAILSCALE_DOMAIN},http://${TAILSCALE_DOMAIN}
CSRF_TRUSTED_ORIGINS=https://${TAILSCALE_DOMAIN},http://${TAILSCALE_DOMAIN},http://localhost:8000

# Database configuration
DB_NAME=techniques
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432